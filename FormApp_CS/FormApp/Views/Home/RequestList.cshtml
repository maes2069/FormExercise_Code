<!-- RequestList.cshtml -->

@model List<FormApp.Models.RequestModel>

@{
    ViewData["Title"] = "Request List";
}

<h1>Request List</h1>

<a asp-controller="Home" asp-action="Index">Back to Form</a>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Description</th>
                <th>Due Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.Email</td>
                    <td>@request.Description</td>
                    <td>@request.DueDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No requests found.</p>
}


